<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/user_name"
        android:inputType="text|textEmailAddress" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/create_account"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="createAccountOnClick"
        android:text="@string/create_account_button" />

    <ToggleButton
        android:id="@+id/toggleFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/createAccount"
        android:onClick="toggleFacebookLogin"
        android:text="@string/facebook_login_label" />

    <TextView
        android:id="@+id/googleLoginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleGoogle"
        android:layout_alignBottom="@+id/toggleGoogle"
        android:layout_alignLeft="@+id/facebookLoginLabel"
        android:text="@string/google_login_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggleGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleFacebook"
        android:layout_toRightOf="@+id/createAccount"
        android:onClick="toggleGoogleLogin"
        android:text="@string/facebook_login_label" />

    <TextView
        android:id="@+id/facebookLoginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleFacebook"
        android:layout_alignBottom="@+id/toggleFacebook"
        android:layout_alignLeft="@+id/username"
        android:text="@string/facebook_login_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>